%header#gbl_header
  #gbl_header_bar
    .container
      #hdr_sarch
        = link_to "コーディネートを探す"
        -#検索フォームを実装する
        %p.input
          %span.icon_font

      %h1.logo
        = link_to "FASHON", root_path
      .no_login
        %p.login
          %i.far.fa-user
          %i.login
            - if user_signed_in?
              = current_user.name
            - else
              = link_to "ログイン", new_user_registration_path
        %p.regist
          %i.over 
            - unless user_signed_in?
              = link_to "新規会員登録", new_user_session_path
        %ul.dropmenu
          %li
            = link_to "マイページ"
          %li
            = link_to "タイムライン"
          %li
            = link_to "基本設定"
          %li.logout
            = link_to "ログアウト", destroy_user_session_path, method: :delete